<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/garden_garden">

        <ImageButton
            android:id="@+id/clean_all"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/garden_clean"
            android:backgroundTint="#9bcfb8"
            android:layout_gravity="right"/>

        <FrameLayout
            android:id="@+id/top_garden"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp">

        </FrameLayout>


        <LinearLayout
            android:id="@+id/objects"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/mypage_scroll_setting"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/change_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:src="@drawable/garden_button_setting" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/objects_listview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scrollbars="horizontal" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>